from rest_framework import serializers
from models import MenuItem, MenuCategory, Store

class StoreSerializer(serializers.ModelSerializer):
    class Meta:
        model = Store
        fields = ('storeName')

class MenuCategorySerializer(serializers.ModelSerializer):
    menuItem = serializers.RelatedField(many=True)
    
    class Meta:
        model = MenuCategory
        store = serializers.PrimaryKeyRelatedField(many=True, read_only=True)
        fields = ('categoryName', 'store', 'menuItem')
    


class MenuItemSerializer(serializers.ModelSerializer):
    category_set = serializers.PrimaryKeyRelatedField(many=True, read_only=True)
    class Meta:
        model = MenuItem
        fields = ('name', 'description', 'price', 'category')